{
  "name": "@yaak/plugin-runtime",
  "scripts": {
    "dev": "nodemon",
    "build": "run-p build:*",
    "build:main": "esbuild src/index.ts --bundle --platform=node --outfile=build/index.cjs",
    "build:worker": "esbuild src/index.worker.ts --bundle --platform=node --outfile=build/index.worker.cjs",
    "build:proto": "grpc_tools_node_protoc --ts_proto_out=src/gen --ts_proto_opt=outputServices=nice-grpc,outputServices=generic-definitions,useExactTypes=false --proto_path=../proto ../proto/yaak/plugin_runtime.proto --descriptor_set_out=src/gen/protoset.bin --include_imports"
  },
  "dependencies": {
    "@yaakapp/api": "^0.1.0-beta.1",
    "abort-controller-x": "^0.4.3",
    "long": "^5.2.3",
    "nice-grpc": "^2.1.9",
    "nice-grpc-server-reflection": "^2.0.11",
    "protobufjs": "^7.3.2"
  },
  "devDependencies": {
    "grpc-tools": "^1.12.4",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "ts-proto": "^1.180.0",
    "typescript": "^5.5.2"
  }
}
